{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "rootDir": ".",
    "types": ["vitest/globals", "node", "aws-lambda"],
    "noEmit": true
  },
  "include": ["lambda-fns", "src", "test", "integration-tests", "vitest.config.ts"],
  "exclude": ["node_modules", "cdk.out", "dist"]
}
