{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,

    "inlineSourceMap": true,
    "inlineSources": true,

    "experimentalDecorators": true,
    "strictPropertyInitialization": false,

    "rootDir": ".",

    "types": ["vitest/globals", "node", "aws-lambda"],
    "isolatedModules": true,

    "skipLibCheck": true,

    "noEmit": true          // <â€” key change: don't write .js / .d.ts files
  },
  "exclude": ["node_modules", "cdk.out", "vitest.config.*", "dist"]
}
